{
  // Python environment
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.terminal.activateEnvironment": true,

  // Cursor agent settings
  "cursor.composer.autoApplyEdits": true,
  "cursor.agent.autoApplyEdits": true,

  // Task detection
  "task.autoDetect": "on",
  "task.problemMatchers.autoDetect": true,

  // Keep workspace explorer clean
  "files.exclude": {
    "**/.DS_Store": true,
    "**/*.pyc": true,
    "**/__pycache__": true,
    "**/.ruff_cache": true,
    "**/.pytest_cache": true,
    ".venv": true
  },

  // Don't search inside these
  "search.exclude": {
    ".venv": true,
    "workspace": true,
    "**/*.pptx": true
  },

  // File associations
  "files.associations": {
    "*.mdc": "markdown"
  }
}
